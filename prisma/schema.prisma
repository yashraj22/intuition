generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FeedItem {
  id          String   @id @default(cuid())
  title       String
  description String?
  url         String   @unique
  imageUrl    String?
  author      String?
  saved       Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  Saved       Saved[]

  @@index([url])
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  image     String?
  createdAt DateTime @default(now())
  Saved     Saved[]
  Source    Source[]
}

model Saved {
  id         String   @id @default(cuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  feedItem   FeedItem @relation(fields: [feedItemId], references: [id])
  feedItemId String
  createdAt  DateTime @default(now())

  @@index([userId, feedItemId], name: "unique_saved")
}

model Source {
  id        String   @id @default(cuid())
  name      String
  url       String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  User      User     @relation(fields: [userId], references: [id])
}
